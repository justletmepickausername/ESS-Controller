<mah:MetroWindow 
    x:Class="ESS_Controller.Windows.RemoveProductWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:local="clr-namespace:ESS_Controller.Windows"
    mc:Ignorable="d"
    IsVisibleChanged="MetroWindow_IsVisibleChanged"
    WindowStartupLocation="CenterScreen"
    TitleCharacterCasing="Normal"
    Title="Remove Product" Height="320" Width="400">

    <StackPanel VerticalAlignment="Center">

        <TextBlock Text="Remove Product" TextDecorations="Underline" FontSize="26" FontWeight="DemiBold" HorizontalAlignment="Center" Margin="0,00,0,60"/>

        <ComboBox Name="comboboxProducts" Height="26"  SelectionChanged="comboboxProducts_SelectionChanged" HorizontalAlignment="Center" Width="180"/>

        <Button Name="btnRemove" Click="btnRemove_Click" Content="Remove" HorizontalAlignment="Center" Width="100" FontSize="16" Margin="0,60,0,0"/>

    </StackPanel>

</mah:MetroWindow>
